# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
name = Jake Reichert
email = jake@jakereichert.com
[diff]
	tool = diffmerge
[difftool "diffmerge"]
    cmd = /usr/local/bin/diffmerge.sh \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	trustExitCode = true
	cmd = /usr/local/bin/diffmerge.sh --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[init]
	defaultBranch = main
[gui]
    recentrepo = /Users/jake/projects/sagen/sagen-api-nodejs

#### Config for git-delta (https://github.com/dandavison/delta?tab=readme-ov-file) ####
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

#### End config for git-delta ####
